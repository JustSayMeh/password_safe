<Window x:Class="PasswordStore.Windows.TelegramCheckCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordStore.Windows"
        mc:Ignorable="d"
        Title="TelegramAuthWindow" 
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Background="{StaticResource window_backgroud_color}">
    <StackPanel Margin="10">
        <TextBlock HorizontalAlignment="Center" Text="{StaticResource enter_phone_number_string}"/>
        <TextBox Name="Code" MinWidth="250" Margin="10,5,10,0" Padding="5"></TextBox>
        <WrapPanel HorizontalAlignment="Right">
            <Button MinWidth="60" Margin="0,5,10,5" Padding="5" Content="{StaticResource ok_string}" Name="enter_button" Click="enter_button_Click"/>
            <Button IsCancel="True" MinWidth="60" Margin="0,5,10,5" Padding="5" Content="{StaticResource cancel_string}"/>
        </WrapPanel>
    </StackPanel>
</Window>
